<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Items on Account :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_accountname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Account Name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_summary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:backgroundTint="@android:color/holo_blue_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_info_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@android:color/holo_green_dark"
        app:layout_constraintEnd_toStartOf="@+id/fab_controller"
        app:layout_constraintTop_toTopOf="@+id/fab_controller"
        app:srcCompat="@android:drawable/ic_input_add" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintEnd_toStartOf="@+id/fab_budget"
        app:layout_constraintTop_toTopOf="@+id/fab_budget"
        app:srcCompat="@android:drawable/button_onoff_indicator_on" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@android:color/holo_blue_light"
        app:layout_constraintEnd_toStartOf="@+id/fab_fund"
        app:layout_constraintTop_toTopOf="@+id/fab_fund"
        app:srcCompat="@android:drawable/ic_secure" />

    <TextView
        android:id="@+id/textview_fund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Add Fund"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/fab_fund"
        app:layout_constraintEnd_toEndOf="@+id/fab_fund"
        app:layout_constraintStart_toStartOf="@+id/fab_fund" />

    <TextView
        android:id="@+id/textview_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Add Budget"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/fab_budget"
        app:layout_constraintEnd_toEndOf="@+id/fab_budget"
        app:layout_constraintStart_toStartOf="@+id/fab_budget" />

    <TextView
        android:id="@+id/textview_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        android:text="Add Expense"
        app:layout_constraintBottom_toTopOf="@+id/fab_expense"
        app:layout_constraintEnd_toEndOf="@+id/fab_expense"
        app:layout_constraintStart_toStartOf="@+id/fab_expense" />

</android.support.constraint.ConstraintLayout>